{
  "name": "real-time-visualizer",
  "version": "1.0.0",
  "description": "Real-time window visualizer for OBS streaming",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && python main.py",
    "install:all": "npm install && cd apps/frontend && npm install",
    "build": "cd apps/frontend && npm run build",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "local"
  },
  "keywords": [
    "window-detection",
    "real-time",
    "obs",
    "visualizer",
    "python",
    "react"
  ],
  "author": "Developer",
  "license": "MIT"
}